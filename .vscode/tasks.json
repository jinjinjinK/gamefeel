    "version": "2.0.0",
    "tasks": [
        {
            "label": "HL debug",
            "type": "hxml",
            "file": "hl.debug.hxml",
            "presentation": {
                "reveal": "never",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": [ "$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace" ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },   
        {
            "label": "myShellCommand",
            "type": "shell",
            "command": "hl bin/client.hl"
        },
        {
            "label": "HL release",
            "type": "hxml",
            "file": "hl.dx.hxml",
            "presentation": {
                "reveal": "never",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": [ "$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace" ],
        },

        {
            "label": "JS release",
            "type": "hxml",
            "file": "js.hxml",
            "presentation": {
                "reveal": "never",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": [ "$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace" ],
        }
    ]
}
